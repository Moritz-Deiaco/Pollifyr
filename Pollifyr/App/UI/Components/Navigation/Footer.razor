@using Pollifyr.App.Services
@using Pollifyr.App.Services.Auth

@inject ConfigService ConfigService
@inject IdentityService IdentityService

<div class="app-footer">
    <div class="app-container container-fluid d-flex flex-column flex-md-row flex-center flex-md-stack py-3 ">
        <div class="text-gray-900 order-2 order-md-1">
            <span class="text-muted fw-semibold me-1">@DateTime.Now.Year <i class='bx bxs-copyright'></i></span>
            <a href="/" target="_blank" class="text-gray-800 text-hover-primary">@ConfigService.Get().Information.AppName</a>
        </div>
        <ul class="menu menu-gray-700 menu-hover-primary fw-semibold order-1">
            <li class="menu-item">
                <a href="/results" class="menu-link px-2"><i class='bx bx-pie-chart-alt-2 me-1'></i> Results</a>
            </li>

            <li class="menu-item">
                <a href="/surveys" class="menu-link px-2"><i class='bx bx-list-ul me-1'></i> Surveys</a>
            </li>
            
            @if (ConfigService.Get().Information.UseImprint)
            {
                <li class="menu-item">
                    <a href="/imprint" class="menu-link px-2"><i class='bx bx-file me-1'></i> Imprint</a>
                </li>
            }
            @if (ConfigService.Get().Information.ShowCredits)
            {
                <li class="menu-item">
                    <a href="https://mxritz.xyz" target="_blank" class="menu-link px-2"><i class='bx bx-code-alt me-1'></i> made by Moritz</a>
                </li>
            }
        </ul>
    </div>
</div>

